{
  "version": 2,
  "regions": ["bru"],
  "builds": [
    { "src": "next.config.js", "use": "@now/next" },
    { "src": "src/controllers/**/*.ts", "use": "@now/node" }
  ],
  "env": {
    "API_ENDPOINT": "@api_endpoint",
    "API_AUTH": "@api_auth"
  },
  "build": {
    "env": {
      "MAPS_API_TOKEN": "@maps_api_token"
    }
  },
  "routes": [
    {
      "src": "^/sitemap.xml$",
      "methods": ["GET"],
      "dest": "/src/controllers/sitemap.ts"
    },
    {
      "src": "^/controllers/(.*[^/]+)$",
      "methods": ["POST", "GET"],
      "dest": "/src/controllers/$1.ts"
    },
    {
      "src": "/service-worker.js",
      "dest": "/_next/static/service-worker.js",
      "headers": {
        "cache-control": "public,max-age=31536000,s-max-age=31536000,immutable",
        "Service-Worker-Allowed": "/"
      }
    },
    {
      "src": "(/_next/static/*/.+)",
      "headers": {
        "cache-control": "public,max-age=31536000,s-max-age=31536000,immutable"
      }
    },
    {
      "src": "(/static/*/.+)",
      "headers": {
        "cache-control": "public,max-age=31536000,s-max-age=31536000,immutable"
      }
    },
    {
      "src": "/(((?!\\?|#|\\.|_next|controllers).)*((?!\\?|/|#|\\.).))",
      "status": 301,
      "headers": { "Location": "/$1/" }
    }
  ]
}
