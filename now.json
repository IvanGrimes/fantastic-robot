{
  "version": 2,
  "builds": [
    { "src": "next.config.js", "use": "@now/next" },
    { "src": "lambdas/**/*.ts", "use": "@now/node" }
  ],
  "build": {
    "env": {
      "MAPS_API_TOKEN": "@maps_api_token",
      "API_TARGET": "@api_target",
      "API_AUTH": "@api_auth"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/lambdas/proxy.ts"
    },
    {
      "src": "/service-worker.js",
      "dest": "/_next/static/service-worker.js",
      "headers": {
        "cache-control": "public,max-age=31536000,s-max-age=31536000,immutable",
        "Service-Worker-Allowed": "/"
      }
    },
    {
      "src": "(/_next/static/*/.+)",
      "headers": {
        "cache-control": "public,max-age=31536000,s-max-age=31536000,immutable"
      }
    },
    {
      "src": "(/static/*/.+)",
      "headers": {
        "cache-control": "public,max-age=31536000,s-max-age=31536000,immutable"
      }
    },
    {
      "src": "^/sitemap.xml$",
      "dest": "/lambdas/sitemap.ts"
    },
    {
      "src": "/(((?!\\?|#|\\.|_next).)*((?!\\?|/|#|\\.).))",
      "status": 301,
      "headers": { "Location": "/$1/" }
    }
  ]
}
